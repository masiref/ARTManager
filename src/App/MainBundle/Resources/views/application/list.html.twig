<table id="applications-{{ project.id }}"
        class="table table-hover table-condensed table-striped table-responsive table-bordered"
        {% if project.applications|length == 0 %}style="display: none;"{% endif %}>
    <thead>
        <tr>
            <th><i class="fontello-icon-pencil"></i>Name</th>
            <th><i class="fontello-icon-info"></i>Description</th>
            <th class="text-center"><i class="fontello-icon-edit"></i>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for application in project.applications %}
            {% include "AppMainBundle:application:item.html.twig" with { 'application' : application } %}
        {% endfor %}
    </tbody>
</table>
