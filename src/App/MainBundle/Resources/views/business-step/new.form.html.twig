{% set form = addBusinessStepFormView %}
{% set application = application %}
<div class="modal fade" id="modal-add-business-step">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-{{ context }}">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title text-{{ context }}">
                    <i class="fontello-icon-level-up"></i> Add a <strong>business step</strong> to 
                    <strong><span id="new-business-step-business-step-folder-name"></span></strong>
                    <small><span id="new-business-step-business-step-folder-description"></span></small>
                </h4>
            </div>
            <div class="modal-body">
                <form id="form-add-business-step" name="business-step" method="post" action="#">
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-custom-brown" id="save-business-step"
                        data-business-step-folder-id=""
                        data-business-step-folder-name="">Save changes</button>
            </div>
        </div>
    </div>
</div>