<div class="modal fade" id="modal-control-step">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-{{ context }}">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title text-{{ context }}">
                    <i class="fontello-icon-ellipsis"></i>
                    <span id="modal-control-step-title">
                    </span>
                </h4>
            </div>
            <div class="modal-body" id="modal-control-step-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-{{ context }}" id="save-control-step"
                        data-control-step-id=""
                        data-step-id="">Save changes</button>
            </div>
        </div>
    </div>
</div>