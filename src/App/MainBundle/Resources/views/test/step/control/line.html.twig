<div class="col-md-1">
    <a href="#"
       id="delete-control-step-{{ controlStep.id }}"
           data-id="{{ controlStep.id }}"
           data-order="{{ controlStep.order }}"
           data-step-id="{{ controlStep.parentStep.id }}"
           data-step-order="{{ controlStep.parentStep.order }}"
           data-toggle="tooltip" data-placement="bottom" title="Delete">
        <i class="fontello-icon-minus-circled"></i>
    </a>
</div>
<div class="col-md-1">
    <p class="control-step-order">
        <strong>
            <span id="control-step-order-{{ controlStep.id }}">{{ controlStep.order }}</span>
        </strong>
    </p>
</div>
<div class="col-md-9">
    {% set sentence = controlStep.sentence(locale) %}
    <h4>{% if sentence %}{{ sentence|raw }}{% else %}{{ controlStep }}{% endif %}</h4>
</div>
<div class="col-md-1">
    <a href="#"
       id="edit-control-step-{{ controlStep.id }}"
       data-id="{{ controlStep.id }}"
       data-step-id="{{ controlStep.parentStep.id }}"
       data-toggle="tooltip" data-placement="bottom" title="Edit">
        <i class="fontello-icon-edit"></i>
    </a>
</div>