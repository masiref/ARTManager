{% extends 'base.html.twig' %}
{% set page_ = "test-planner" %}

{% block jumbotronTitle %}
    <span class="text-mypurple">
        <i class="fontello-icon-tasks"></i><strong>Test</strong> Planner
    </span>
{% endblock %}

{% block jumbotronBody %}
    <p class="text-center">
        <a href="{{ path('app_index_application', { 'id': application.id }) }}">
            <i class="fontello-icon-left-circled"></i>Return to <strong>{{ application.name }}</strong> application
        </a>
    </p>
{% endblock %}

{% block breadcrumb_items %}
    <li>
        <a href="{{ path('homepage') }}"><i class="fontello-icon-right-open"></i>Home</a>
    </li>
    <li>
        <a href="{{ path('app_index_project', { 'id': application.project.id }) }}">
            <i class="fontello-icon-right-open"></i>{{ application.project }}</a>
    </li>
    <li>
        <a href="{{ path('app_index_application', { 'id': application.id }) }}">
            <i class="fontello-icon-right-open"></i>{{ application }}</a>
    </li>
    <li class="active">
        <i class="fontello-icon-angle-circled-right"></i>Test Plan
    </li>
{% endblock %}

{% block body %}
    {% include 'AppMainBundle:test:planner/tree.html.twig' with { 'application': application } %}
    {% include 'AppMainBundle:test:planner/entity-properties.html.twig' %}
    {% include 'AppMainBundle:test:folder/new.form.html.twig' %}
    {% include 'AppMainBundle:test:new.form.html.twig' %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function() {
            $( "#entity-name" ).editable({
                error: function(response, newValue) {
                    swal({
                        title: "{% trans from 'titles' %}Error{% endtrans %}",
                        text: response.responseText,
                        type: "error",
                        confirmButtonText: "{% trans from 'labels' %}OK{% endtrans %}"
                    }); 
                },
                success: function(response, newValue) {
                    hideTestsPanel({{ application.id }});
                    switch(response.entityType) {
                        case "folder":
                            showTestsTreeWithSelectedFolder(response.testFolderId);
                            $('#add-test').data('test-folder-name', newValue);
                            break;
                        case "test":
                            showTestsTreeWithSelectedTest(response.testId);
                            break;
                    }
                }
            });
            $( "#entity-description" ).editable({
                emptytext: 'Add description',
                defaultValue: '',
                success: function(response, newValue) {
                    hideTestsPanel({{ application.id }});
                    switch(response.entityType) {
                        case "folder":
                            showTestsTreeWithSelectedFolder(response.testFolderId);
                            $('#add-test').data('test-folder-description', newValue);
                            break;
                        case "test":
                            showTestsTreeWithSelectedTest(response.testId);
                            break;
                    }
                }
            });
            refreshTestsTree({{ application.id }}, true, true);
        });
    </script>
{% endblock %}