<div class="modal fade" id="modal-add-test-instance">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-{{ context }}">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title text-{{ context }}">
                    <i class="fontello-icon-tint"></i> Add a <strong>scenario instance</strong> to 
                    <strong>{{ testSet.name }}</strong>
                    <small>{{ testSet.description }}</small>
                </h4>
            </div>
            <div class="modal-body">
                <div class="panel panel-custom-red" id="panel-tests-{{ application.id }}">
                    <div class="panel-heading">
                        <strong>
                            <i class="fontello-icon-database"></i> Scenario Plan
                        </strong>
                    </div>
                    <div class="panel-body" id="panel-body-{{ application.id }}">
                        <div id="tree-tests-{{ application.id }}"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-custom-red" id="save-test-instances"
                        data-test-set-id="{{ testSet.id }}"
                        data-application-id="{{ application.id }}">Add selected scenarios</button>
            </div>
        </div>
    </div>
</div>