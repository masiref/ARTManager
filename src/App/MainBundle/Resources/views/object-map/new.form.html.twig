{% set form = addObjectMapFormView %}
{% set application = application %}
<div class="modal fade" id="modal-add-object-map">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-{{ context }}">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title text-{{ context }}">
                    <i class="fontello-icon-sitemap"></i> Add an <strong>object map</strong>
                </h4>
            </div>
            <div class="modal-body">
                <form id="form-add-object-map" name="object-map" method="post" action="#">
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-custom-yellow" id="save-object-map"
                        data-application-id="{{ application.id }}">Save changes</button>
            </div>
        </div>
    </div>
</div>