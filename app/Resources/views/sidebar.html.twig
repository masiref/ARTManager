{% if app.user %}
    <div id="sidebar" class="navmenu navmenu-inverse navmenu-fixed-left offcanvas">
        <h2 id="sidebar-title" class="text-center">
            <i id="sidebar-title-icon" class="fontello-icon-hourglass"></i>Planned Test Set Runs
        </h2>
        <div id="sidebar-content">
            {% include "AppMainBundle:test-set:run/section.html.twig"
                with {
                    'title': "Active",
                    'icon': "flash",
                    'context': "success",
                    'count': plannedTestSetRuns.count,
                    'testSetRunsByApplicationTestSet': plannedTestSetRuns.byApplicationTestSet 
                }
            %}
            {% include "AppMainBundle:test-set:run/section.html.twig"
                with {
                    'title': "Recent",
                    'icon': "back-in-time",
                    'context': "info",
                    'count': recentTestSetRuns.count,
                    'testSetRunsByApplicationTestSet': recentTestSetRuns.byApplicationTestSet 
                }
            %}
        </div>
    </div>

    <div class="affix">
        <button type="button" id="sidebar-toggle" class="navbar-toggle" data-toggle="offcanvas" data-target="#sidebar" data-canvas="body">
            <i class="fontello-icon-hourglass"></i>
        </button>
    </div>
{% endif %}